<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework> <!-- Ensure this matches SDK used -->
    <RuntimeIdentifier>browser-wasm</RuntimeIdentifier>
    <OutputType>Exe</OutputType> <!-- Still typically needed for the browser-wasm workload -->
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- JSExport requires this in .NET 7+ for non-Blazor projects -->
    <WasmEnableJSInterop>true</WasmEnableJSInterop>
  </PropertyGroup>
</Project>
